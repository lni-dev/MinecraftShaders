    "uv_size": [ 16, 16 ],
    "size": [ 16, 16 ]
  },

  "feedback_icon": {
    "type": "image",
    "texture": "textures/gui/newgui/Feedback",
    "layer": 3,
    "uv": [ 0, 0 ],
    "uv_size": [ 16, 16 ],
    "size": [ 16, 16 ]
  },
  
  "energy_icon": {
    "type": "image",
    "texture": "textures/energy.png",
    "layer": 3,
    "uv": [ 0, 0 ],
    "uv_size": [ 64, 64 ],
    "size": [ 16, 16 ]
  },

  "Xbox_icon": {
    "type": "image",
    "texture": "textures/gui/newgui/xbox4",
