            },
            {
              "from_button_id": "button.menu_ok",
              "to_button_id": "button.wake_up_button",
              "mapping_type": "pressed"
            }
          ]
        }
      },
      {
        "select_button@death.a_button": {
          "layer": 1,
          "offset": [ 0, "-5%" ]
        }
