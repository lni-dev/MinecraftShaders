{
  "namespace": "bed",

  // Screen //

  "in_bed_screen@common.base_screen": {
    "controls": [
      {
        "background": {
          "type": "image",
          "size": [ "100%", "100%" ],
          "texture": "textures/gui/newgui/White",
          "color": [ 0.0, 0.0, 0.0 ],
          "alpha": 0.5,
          "uv_size": [ 1, 1 ],
          "nineslice_size": 1
        }
      },
      {
        "wake_up_button@death.base_button": {
          "size": [ 66, "15%" ],
          "anchor_from": "bottom_middle",
          "anchor_to": "bottom_middle",
