  // PROFILE button & section

  "profile_button@settings_common.section_toggle_base": {
    "$glyph_uv": [ 25, 34 ],
    "$glyph_uvsize": [ 11, 12 ],
    "$button_label_text": "options.profile",
    "property_bag": {
      "#panel_title": "options.profileTitle"
    }
  },

