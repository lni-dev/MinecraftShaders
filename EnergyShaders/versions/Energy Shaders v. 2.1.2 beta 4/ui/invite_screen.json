{
  "namespace": "invite",

  "label": {
    "type": "label",
    "anchor_from": "center",
    "anchor_to": "center",
    "offset": [ 0, 0 ],
    "color": "white"
  },

  //Black bordered box is used for the grid item and around the gamerpic
  "black_border": {
    "type": "image",
    "texture": "textures/gui/newgui/MainBanners",
    "uv": [ 0, 0 ],
    "uv_size": [ 3, 3 ],
    "nineslice_size": 1.0
  },

  "black_border_hover@black_border": {
    "texture": "textures/gui/newgui/MainBannersHover"
  },

  //Gamerpic uses the black border and an image that will come from XBL
  "gamerpic": {
    "type": "image",
    "texture": "#texture",
    "uv": [ 0, 0 ],
    "uv_size": [ 64, 64 ],
    "texture_file_system": "#texture_file_system",
    "bindings": [
      {
        "binding_name": "#texture",
        "binding_type": "collection",
        "binding_collection_name": "$collection_name"
      },
      {
        "binding_name": "#texture_file_system",
        "binding_type": "collection",
        "binding_collection_name": "$collection_name"
      }

    ]
  },

  "gamerpic_panel": {
    "type": "panel",
    "size": [ 20, 20 ],
    "anchor_to": "left_middle",
    "anchor_from": "left_middle",
    "offset": [ 20, 0 ],
    "controls": [
      { "@black_border": { } },
      {
        "@gamerpic": {
          "layer": 1,
          "size": [ "100%-2px", "100%-2px" ]
        }
      }
    ]
  },

  //Status image - 2 images with flipped visibility
  "status_image": {
    "type": "image",
    "uv": [ 0, 0 ],
    "uv_size": [ 8, 8 ],
    "size": [ 8, 8 ]
  },

  "online_image@status_image": {
    "texture": "textures/gui/newgui/online",
    "bindings": [
      {
        "binding_name": "#online_visible",
        "binding_name_override": "#visible",
        "binding_type": "collection",
        "binding_collection_name": "$collection_name"
      }
    ]
  },

  "offline_image@status_image": {
    "texture": "textures/gui/newgui/offline",
    "bindings": [
      {
        "binding_name": "#offline_visible",
        "binding_name_override": "#visible",
        "binding_type": "collection",
        "binding_collection_name": "$collection_name"
      }
    ]
  },

  "online_indicator": {
    "type": "panel",
    "anchor_to": "right_middle",
    "anchor_from": "right_middle",
    "offset": [ -6, 0 ],
    "size": [ 9, 9 ],
    "controls": [
      {
        "@online_image": { }
      },
      {
        "@offline_image": { }
      }
    ]
  },

  //The selected indicator - a check box - 4 images for checked/hover
  "checkbox_image": {
    "type": "image",
    "uv": [ 0, 0 ],
    "uv_size": [ 10, 10 ],
    "size": [ 10, 10 ],
    "anchor_to": "left_middle",
    "anchor_from": "left_middle",
    "offset": [ 6, 0 ]
  },

  "checked_image@checkbox_image": {
    "texture": "textures/gui/newgui/buttons/new_checkbox/check"
  },

  "unchecked_image@checkbox_image": {
    "texture": "textures/gui/newgui/buttons/new_checkbox/space"
  },

  "checked_hover_image@checkbox_image": {
    "texture": "textures/gui/newgui/buttons/new_checkbox/checkHover"
  },

  "unchecked_hover_image@checkbox_image": {
    "texture": "textures/gui/newgui/buttons/new_checkbox/spaceHover"
  },

  //labels that indicate the information about the game
  //Since there's no flow panel we use the color switch codes to build up the string from multiple inputs
  "friend_label": {
    "type": "label",
    "size": [ "100%-60px", "50%" ]
  },

  "friend_grid_label_line1@friend_label": {
    "text": "#label_line1",
    "anchor_to": "top_left",
    "anchor_from": "top_left",
    "offset": [ 42, 5 ],
    "bindings": [
      {
        "binding_name": "#label_line1",
        "binding_type": "collection",
        "binding_collection_name": "$collection_name"
      }
    ]
  },

  "friend_grid_label_line2@friend_label": {
    "text": "#label_line2",
    "anchor_to": "bottom_left",
    "anchor_from": "bottom_left",
    "offset": [ 42, 0 ],
    "bindings": [
      {
        "binding_name": "#label_line2",
        "binding_type": "collection",
        "binding_collection_name": "$collection_name"
      }
    ]
  },

  "friend_background@black_border": {
    "size": [ "100%-2px", "100%-2px" ]
  },

  "friend_background_hover@black_border_hover": {
    "size": [ "100%-2px", "100%-2px" ]
  },

  "hover_friend_button": {
    "type": "panel",
    "controls": [
      { "@friend_button_layout": { } },
      {
        "hover_text@common.hover_text": {
          "layer": 30,
          "bindings": [
            {
              "binding_name": "#hover_text",
              "binding_type": "collection",
              "binding_collection_name": "$collection_name"
            }
          ]
        }
      }
    ]
  },

  "friend_button_layout": {
    "type": "panel",
    "layer": 1, //Without this the background disappeared on certain layout changes.
    "controls": [
      { "@friend_grid_label_line1": { "layer": 1 } },
      { "@friend_grid_label_line2": { "layer": 1 } },
      { "@online_indicator": { "layer": 1 } },
      { "pp@gamerpic_panel": { "layer": 1 } }
    ]
  },

  "unchecked_friend_button_layout": {
    "type": "panel",
    "controls": [
      { "@friend_background": { "layer": 0 } },
      { "@friend_button_layout": { "layer": 1 } },
      { "@unchecked_image": { "layer": 2 } }
    ]
  },

  "checked_friend_button_layout": {
    "type": "panel",
    "controls": [
      { "@friend_background": { "layer": 0 } },
      { "@friend_button_layout": { "layer": 1 } },
      { "@checked_image": { "layer": 2 } }
    ]
  },

  "unchecked_hover_friend_button_layout": {
    "type": "panel",
    "controls": [
      { "@friend_background_hover": { "layer": 0 } },
      { "@friend_button_layout": { "layer": 1 } },
      { "@unchecked_hover_image": { "layer": 2 } },
      { "@hover_friend_button": { } }
    ]
  },

  "checked_hover_friend_button_layout": {
    "type": "panel",
    "controls": [
      { "@friend_background_hover": { "layer": 0 } },
      { "@friend_button_layout": { "layer": 1 } },
      { "@checked_hover_image": { "layer": 2 } },
      { "@hover_friend_button": { } }
    ]
  },

  "friend_button@common.checkbox": {
    "$pressed_button_name": "button.menu_friend_select",
    "size": [ "100%", "100%" ],
    "controls": [
      {
        "checked@checked_friend_button_layout": { }
      },
      {
        "unchecked@unchecked_friend_button_layout": { }
      },
      {
        "checked_hover@checked_hover_friend_button_layout": { }
      },
      {
        "unchecked_hover@unchecked_hover_friend_button_layout": { }
      },
      {
        "checked_locked@checked_friend_button_layout": { } //unused on this screen
      },
      {
        "unchecked_locked@unchecked_friend_button_layout": { } //unused on this screen
      }
    ],
    "$toggle_grid_collection_name": "$collection_name",
    "$toggle_name": "$toggle_invite_name",
    "$toggle_binding_type": "collection",
    "$toggle_state_binding_name": "toggle_invite_state"
  },

  "friend_grid_item_template": {
    "type": "panel",
    "size": [ "100% - 7px", 30 ],
    "controls": [
      {
        "@friend_button": { }
      }
    ]
  },

  "online_friend_grid_item@friend_grid_item_template": {
    "type": "panel",
    "$collection_name": "online_friends"
  },

  "offline_friend_grid_item@friend_grid_item_template": {
    "type": "panel",
    "$collection_name": "offline_friends"
  },

  "online_friend_list_grid": {
    "type": "grid",
    "grid_item_template": "online_friend_grid_item",
    "grid_dimension_binding": "#online_friend_grid_dimension",
    "collection_name": "online_friends",
    "$toggle_invite_name": "toggle_invite_online",
    "anchor_to": "top_left",
    "anchor_from": "top_left",
    "layer": 2,
    "size": [ "100%", "default" ],
    "offset": [ 3, 0 ],
    "bindings": [
      {
        "binding_name": "#online_friend_grid_dimension",
        "binding_type": "global"
      }
    ]
  },

  "offline_friend_list_grid": {
    "type": "grid",
    "grid_item_template": "offline_friend_grid_item",
    "grid_dimension_binding": "#offline_friend_grid_dimension",
    "collection_name": "offline_friends",
    "$toggle_invite_name": "toggle_invite_offline",
    "anchor_to": "top_left",
    "anchor_from": "top_left",
    "layer": 2,
    "size": [ "100%", "default" ],
    "offset": [ 3, 0 ],
    "bindings": [
      {
        "binding_name": "#offline_friend_grid_dimension",
        "binding_type": "global"
      }
    ]
  },

  "frame_label@label": {
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "size": [ "default", 10 ],
    "offset": [ 1, 2 ],
    "layer": 3
  },

  "friend_panel": {
    "type": "panel",
    "size": [ "100%", "100%" ]
  },

  "scrolling_content_stack": {
    "type": "stack_panel",
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "size": [ "100%", "100%c + 1px" ],
    "offset": [ 3, 0 ],
    "controls": [
      {
        "message@friend_panel": {
          "size": [ "100%", 10 ],
          "ignored": "$hide_err_message",
          "controls": [
            {
              "@frame_label": {
                "text": "$err_message_text",
                "color": [ 1, 0, 0 ]
              }
            }
          ]
        }
      },
      {
        "online@friend_panel": {
          "size": [ "100%", 10 ],
          "controls": [
            {
              "@frame_label": {
                "text": "invite.OnlineFriends"
              }
            }
          ],
          "bindings": [
            {
              "binding_name": "#online_friends_visible",
              "binding_name_override": "#visible",
              "binding_type": "global"
            }
          ]
        }
      },
      {
        "vertical_padding": {
          "type": "panel",
          "size": [ 0, 1 ]
        }
      },
      {
        "@online_friend_list_grid": { }
      },
      {
        "offline@friend_panel": {
          "size": [ "100%", 10 ],
          "controls": [
            {
              "@frame_label": {
                "text": "invite.OfflineFriends"
              }
            }
          ],
          "bindings": [
            {
              "binding_name": "#offline_friends_visible",
              "binding_name_override": "#visible",
              "binding_type": "global"
            }
          ]
        }
      },
      {
        "vertical_padding": {
          "type": "panel",
          "size": [ 0, 1 ]
        }
      },
      {
        "@offline_friend_list_grid": { }
      },
      {
        "no_friends@friend_panel": {
          "size": [ "100%", 30 ],          
          "controls": [
            {
              "@frame_label": {
                "size": [ "default", 30 ],
                "max_size": [ "100%", 30 ],
                "text": "invite.noFriends",
                "anchor_from": "bottom_middle",
                "anchor_to": "bottom_middle"
              }
            }
          ],
          "bindings": [
            {
              "binding_name": "#no_friends_visible",
              "binding_name_override": "#visible",
              "binding_type": "global"
            }
          ]
        }
      }
      //{
      //  "suggested@friend_panel": {
      //    "size": [ "100%", 10 ],
      //    "controls": [
      //      {
      //        "@frame_label": {
      //          "text": "invite.SuggestedFriends"
      //        }
      //      }
      //    ]
      //  }
      //}
    ]
  },

  //The invite panel with all the buttons, grid and close box
  "invite_panel": {
    "type": "input_panel",
    "size": "$large_screen_size",
    "anchor_from": "center",
    "anchor_to": "center",
    "controls": [
      { "@common.common_panel": { "$dialog_background": "dialog_background_hollow_2" } },
      {
        "@common.scrolling_panel": {
          "anchor_to": "top_middle",
          "anchor_from": "top_middle",
          "$scrolling_pane_size": [ "100%-12px", "100%-65px" ],
          "$scrolling_pane_offset": [ 6, 23 ],
          "$scroll_size": [ 5, "100% - 4px" ],
          "$scrolling_content": "invite.scrolling_content_stack",
          "$show_background": false
        }
      },
      {
        "title_label": {
          "type": "label",
          "size": [ "default", 10 ],
          "offset": [ 0, 8 ],
          "text": "invite.title",
          "anchor_from": "top_middle",
          "anchor_to": "top_middle",
          "layer": 2,
          "color": [ 0.275, 0.275, 0.275 ]
        }
      },
      {
        "@button_stack_panel": { }
      }
    ]
  },

  "button_stack_panel": {
    "type": "stack_panel",
    "orientation": "horizontal",
    "size": [ "100% - 14px", 30 ],
    "offset": [ 7, -7 ],
    "$button_size|default": [ "50% - 1px", 30 ],
    "anchor_from": "bottom_left",
    "anchor_to": "bottom_left",
    "variables": [
      {
        "requires": "($is_inviting_to_realm and not $is_realm_owner)",
        "$button_size": [ "100%", 30 ]
      }
    ],
    "controls": [
      {
        "add_friend_button@common_buttons.light_text_button": {
          "ignored": "$is_inviting_to_realm",
          "$pressed_button_name": "button.add_friend",
          "$button_text": "networkWorld.add_friend",
          "size": "$button_size",
          "layer": 2
        }
      },
      {
        "add_member_button@common_buttons.light_text_button": {
          "ignored": "(not $is_realm_owner)",
          "$pressed_button_name": "button.add_member",
          "$button_text": "invite.realm.add_member",
          "size": "$button_size",
          "anchor_from": "bottom_left",
          "anchor_to": "bottom_left",
          "layer": 2
        }
      },
      {
        "padding": {
          "type": "panel",
          "size": [ 2, 0 ],
          "visible": "(not $is_inviting_to_realm or $is_realm_owner)"
        }
      },
      {
        "send_button@common_buttons.light_text_button": {
          "$pressed_button_name": "button.send_invites",
          "$button_text_binding_type": "global",
          "$button_text": "#send_button",
          "size": [ "fill", 30 ],
          "layer": 2,
          "toggle_manager_behavior": "gather",
          "toggle_manage_groups": [ "toggle_invite_online", "toggle_invite_offline" ]
        }
      }
    ]
  },

  "gamepad_helpers": {
    "type": "panel",
    "layer": 2,
    "controls": [
      {
        "@common.gamepad_helper_a": {
          "anchor_from": "bottom_right",
          "anchor_to": "bottom_right"
        }
      }
    ]
  },

  // -----------------------------------------------
  //
  //    screen
  //
  // -----------------------------------------------
  "invite_screen@common.base_screen": {
    "type": "screen",
    "button_mappings": [
      {
        "from_button_id": "button.menu_cancel",
        "to_button_id": "button.menu_exit",
        "mapping_type": "global"
      },
      {
        "from_button_id": "button.menu_up",
        "to_button_id": "button.menu_up",
        "mapping_type": "global",
        "scope": "view"
      },
      {
        "from_button_id": "button.menu_down",
        "to_button_id": "button.menu_down",
        "mapping_type": "global",
        "scope": "view"
      },
      {
        "from_button_id": "button.menu_left",
        "to_button_id": "button.menu_left",
        "mapping_type": "global",
        "scope": "view"
      },
      {
        "from_button_id": "button.menu_right",
        "to_button_id": "button.menu_right",
        "mapping_type": "global",
        "scope": "view"
      }
    ],
    "$screen_content": "invite.invite_screen_content"
  },

  "invite_screen_content": {
    "type": "panel",
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "controls": [
      { "@gamepad_helpers": { } },
      { "@invite_panel": { "layer": 1 } }
    ]
  }

}
